<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:gravity="center"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/class_detail_student_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/txt_bule"
        android:text="学员姓名"/>

    <TextView
        android:id="@+id/class_detail_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="日期"
        />

    <TextView
        android:id="@+id/class_detail_hours"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="课时数"
        />

    <TextView
        android:id="@+id/class_detail_total"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/txt_bule"
        android:text="总价"
        />


</LinearLayout>