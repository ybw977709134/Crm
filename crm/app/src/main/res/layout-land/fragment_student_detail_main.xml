<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/fg_sd_student_detail_rel_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/student_detail_bianji_lyt_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员姓名"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_name_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="学员姓名"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp"  />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员性别"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fg_sd_student_sex_text"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="性别"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_03"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员生日"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fg_sd_student_birthday_text"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="生日"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_04"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_class"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员年级"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_class_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="年级"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp"  />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_05"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员微信号"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_weixin_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="微信号"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/student_detail_bianji_lyt_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_06"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="手机号码"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_phone_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="手机号"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_07"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="联系人"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_contacts_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="联系人"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_08"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_other_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="其他联系人"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_other_contacts_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="紧急联系人"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp"  />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_09"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员地址"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_adress_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="地址"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp"  />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/student_detail_bianji_rel_10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fg_sd_student_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="学员QQ号"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fg_sd_student_qq_text"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:text="QQ"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:background="@color/bg_gray"
                    android:textColor="@color/bianji_text"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

<RelativeLayout
    android:layout_below="@+id/fg_sd_student_detail_rel_up"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <TextView
        android:id="@+id/title_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:text="学员备注"/>
    <EditText
        android:layout_toRightOf="@+id/title_beizhu"
        android:id="@+id/beizhu_text"
        android:layout_width="620dp"
        android:layout_marginLeft="50dp"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/bg_gray"
        android:gravity="top"
        android:maxLines="6"
        android:hint="请填写备注信息"
        android:textColor="@color/bianji_text"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_bianji"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:text="编辑"
        android:textSize="1sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@mipmap/edit"/>

</RelativeLayout>

</RelativeLayout>