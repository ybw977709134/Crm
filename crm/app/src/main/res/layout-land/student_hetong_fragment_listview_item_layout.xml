<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/student_hetong_num"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_weight="0.9"
        android:textSize="16sp"
        android:textColor="@color/txt_bule"
        android:text="合同编号"/>
    <TextView
        android:id="@+id/student_course_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="课程"/>
    <TextView
        android:id="@+id/student_class"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="班级"/>

    <TextView
        android:id="@+id/student_lesson_num"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="课时数"/>

    <TextView
        android:id="@+id/student_total"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/bianji_text"
        android:text="总价"/>

    <TextView
        android:id="@+id/student_refund_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:textColor="@color/txt_bule"
        android:text="退款"/>
</LinearLayout>